@model IEnumerable<CoreDemo.Entities.Concrete.Commet>

<div class="comment-top"> @* Ödev Kısmı*@
    @if (Model.Count() == 0)
    {
        <h2>Daha önce yorum yapılmamış.</h2>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/CoreDemo/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommerUsername</h5>
                    <p>  @item.CommetContent </p>
                </div>
            </div>
        }
    }
</div>